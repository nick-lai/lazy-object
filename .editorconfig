# EditorConfig is awesome: https://editorconfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.php]
indent_size = 4

[*.{,yml,yaml}]
indent_size = 2

[*.json]
insert_final_newline = false

[*.{md,mdx}]
trim_trailing_whitespace = false
